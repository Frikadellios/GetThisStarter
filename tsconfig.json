{
	"extends": "astro/tsconfigs/base",
  	"compilerOptions": {
    	"types": [
      	"bun-types"
    	],
    	"lib": [
      		 "ESNext",
      		 "DOM",
      		 "DOM.Iterable"
    		 ],
    	"module": "esnext",
    	"target": "esnext",
    	"moduleResolution": "bundler",
    	"noEmit": true,
    	"allowImportingTsExtensions": true,
    	"moduleDetection": "force",
    	"jsx": "react-jsx",
    	"allowJs": true,
    	"strict": true,
    	"forceConsistentCasingInFileNames": true,
    	"skipLibCheck": true,
    	"composite": true,
    	"downlevelIteration": true,
    	"allowSyntheticDefaultImports": true,
    	"strictNullChecks": true,
    	"baseUrl": ".",
   		"paths": {
			"@/*": [
				"./src/*"
			  ],
      	 "@lib/*": [
        	"./src/lib/*"
      		],
      	"@components/*": [
        "./src/components/*"
      	],
      	"@layouts/*": [
        	"./src/layouts/*"
      	],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@locales/*": [
        "./src/locales/*"
      ]
    },
    "jsxImportSource": "react",
	"plugins": [
		{
		  "name": "@astrojs/ts-plugin"
		},
	  ],
  }
}
